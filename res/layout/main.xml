<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
    >
    <TextView
        android:id="@+id/system_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/system_label"
        />
    <TextView
        android:id="@+id/system_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@id/system_label"
        android:text="@string/system_name"
        />
    <TextView
        android:id="@+id/production_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/system_label"
        android:text="@string/production_label"
        />
    <TextView
        android:id="@+id/production_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/production_label"
        android:layout_below="@id/system_label"
        android:layout_marginLeft="4dp"
        />
</RelativeLayout>

